{% if page.doormat_col_1 or page.doormat_col_2 or page.doormat_col_3 or page.doormat_col_4 %}
<aside class="doormat" role="contentinfo">
  <div class="container">
    <div class="row row--doormat">
      {% if page.doormat_col_1 %}
      <div class="col col--doormat col--doormat--01">
        {{ page.doormat_col_1 }}
      </div>
      {% endif %}

      {% if page.doormat_col_2 %}
      <div class="col col--doormat col--doormat--02">
        {{ page.doormat_col_2 }}
      </div>
      {% endif %}

      {% if page.doormat_col_3 %}
      <div class="col col--doormat col--doormat--03">
        {{ page.doormat_col_3 }}
      </div>
      {% endif %}

      {% if page.doormat_col_4 %}
      <div class="col col--doormat col--doormat--04">
        {{ page.doormat_col_4 }}
      </div>
      {% endif %}
    </div>
  </div>
</aside>
{% endif %}
