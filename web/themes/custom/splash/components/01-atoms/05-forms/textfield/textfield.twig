{%- import "@base/attributes.twig" as attr -%}
{%- set attributes = attributes|default({'class':[]})|merge({
  'class': attributes.class|default([])|merge(['js-form-type-text', 'form-item'])
}) -%}
{%- set label_attributes = label_attributes|default({}) -%}
{%- set input_attributes = input_attributes|default({})|merge({
  'type': 'text',
  'id': id,
  'name': name,
  'value': value,
  'required': required,
  'class': input_attributes.class|default({'class':[]})|merge(['form-text'])
}) -%}
{% set for = id %}
<div{{ attr.attributes(attributes) }}>
  {{- include('splash:form-label', {label, for, required}) -}}
  {{- include('splash:input', {input_attributes}) -}}
  {% if description %}
    {{- include('splash:form-description', {description}) -}}
  {% endif %}
</div>
