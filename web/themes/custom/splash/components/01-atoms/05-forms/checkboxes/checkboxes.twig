{# Set defaults for optional variables. #}
{% set children %}
  {% for item in items %}
    {{ include('splash:checkbox', {
      attributes: item.attributes|default({}),
      label_attributes: item.label_attributes|default({}),
      input_attributes: item.input_attributes|default({}),
      id: item.id,
      name: item.name|default(''),
      label: item.label,
      value: item.value,
      required: item.required
    })
    }}
  {% endfor %}
{% endset %}
{{ include('splash:fieldset', {
  legend: {
    title: legend
  },
  description: {
    content: description
  },
  children
}) }}
