{% stories form with {
  title: 'Splash Awards/Atoms/Form'
} %}
  {% story checkbox with {
    name: '1. Checkbox',
    args: {
      id: 'my-checkbox',
      name: 'my-checkbox-field',
      title: 'I accept the terms and conditions'|t,
      description: 'By accepting the terms and conditions all your base are belong to us'|t,
      value: 'yes',
      required: true
    }
  } %}
    {{ include('splash:checkbox', {id,name,label,value,required}) }}
  {% endstory %}

  {% story checkboxes with {
    name: '2. Fieldset with multiple checkboxes',
    args: {
      legend: {
        title: 'Sign up for our newsletter'|t,
        attributes: {},
      },
      items: {
        1: {
          label_attributes: {
            required: false,
          },
          id: 'field-newsletter-one',
          name: 'newsletter[one]',
          title: 'Newsletter one',
          value: 'one',
          required: false,
        },
        2: {
          label_attributes: {
            required: false,
          },
          id: 'field-newsletter-two',
          name: 'newsletter[two]',
          title: 'Newsletter two',
          value: 'two',
          required: false,
        }
      }
    }
  } %}
    {% set children %}
      {% for item in items %}
        {{ include('splash:checkbox', {
          attributes: item.attributes|default({}),
          label_attributes: item.label_attributes|default({}),
          input_attributes: item.input_attributes|default({}),
          id: item.id,
          name: item.name|default(''),
          title: item.title,
          value: item.value,
          required: item.required
        })
        }}
      {% endfor %}
    {% endset %}

    {{ include('splash:fieldset', {
      legend: {
        title: legend.title|default(''),
        attributes: legend.attributes|default({})
      },
      description: {
        content: description
      },
      children
    }) }}
  {% endstory %}

  {% story text with {
    name: '3. Input type text',
    args: {
      input_attributes: {
        placeholder: 'What is your name?',
        maxlength: 255,
        size: 60,
      },
      title: 'Name',
      id: 'field-name',
      name: 'name',
      value: '',
      required: true,
      description: 'Please enter your first and last name',
      error: 'Name is a required field'
    }
  } %}
    {% include '@atoms/05-forms/text/text.twig' %}
  {% endstory %}
{% endstories %}
