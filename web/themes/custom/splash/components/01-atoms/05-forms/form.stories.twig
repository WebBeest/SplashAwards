{% stories form with {
  title: 'Splash Awards/Atoms/Form'
} %}
  {% story checkbox with {
    name: '1. Checkbox',
    args: {
      input_attributes: {
        type: 'checkbox',
        id: 'my-checkbox',
        name: 'my-checkbox-field',
        value: 'yes',
        required: true
      },
      title: 'I accept the terms and conditions'|t,
      description: {
        content: 'By accepting the terms and conditions all your base are belong to us'|t
      },
    }
  } %}
    {% embed 'splash:form-element' with {
      type: 'checkbox',
      label_display: 'after',
      description_display: 'after',
      description
    } %}
      {% block label %}
        {{ include('splash:form-label', {
          title,
          required: input_attributes.required,
          for: input_attributes.id
        }) }}
      {% endblock %}
      {% block children %}
        {{ include('splash:input', {input_attributes}) }}
      {% endblock %}
    {% endembed %}
  {% endstory %}

  {% story checkboxes with {
    name: '2. Fieldset with multiple checkboxes',
    args: {
      legend: {
        title: 'Sign up for our newsletter'|t,
      },
      items: {
        1: {
          label_attributes: {
            required: false,
          },
          input_attributes: {
            id: 'field-newsletter-one',
            name: 'newsletter[one]',
            value: 'one',
            required: false,
            type: 'checkbox',
          },
          title: 'Newsletter one',
        },
        2: {
          label_attributes: {
            required: false,
          },
          input_attributes: {
            id: 'field-newsletter-two',
            name: 'newsletter[two]',
            value: 'two',
            required: false,
            type: 'checkbox',
          },
          title: 'Newsletter two',
        },
        3: {
          label_attributes: {
            required: false,
          },
          input_attributes: {
            id: 'field-newsletter-three',
            name: 'newsletter[three]',
            value: 'three',
            required: false,
            type: 'checkbox',
          },
          title: 'Newsletter three',
        }
      }
    }
  } %}
    {% set fieldset_children %}
      {% for item in items %}
        {% set checkbox %}
        {{ include('splash:input', {input_attributes: item.input_attributes}) }}
        {% endset %}
        {% set label %}
        {{ include('splash:form-label', {
          title: item.title,
          required: item.input_attributes.required,
          for: item.input_attributes.id
        }) }}
        {% endset %}

        {{ include('splash:form-element', {
          label,
          children: checkbox,
          label_display: 'after',
          description_display: 'after'
        }) }}
      {% endfor %}
    {% endset %}

    {{ include('splash:fieldset', {
      legend,
      description: {
        content: description
      },
      children: fieldset_children
    }) }}
  {% endstory %}

  {% story text with {
    name: '3. Input type text',
    args: {
      input_attributes: {
        id: 'field-name',
        name: 'name',
        value: '',
        required: true,
        placeholder: 'What is your name?',
        maxlength: 255,
        size: 60,
      },
      title: 'Name',
      description: {
        content:'Please enter your first and last name'|t
      },
      errors: 'Name is a required field'
    }
  } %}
    {% set children %}
      {{ include('splash:input', {input_attributes}) }}
    {% endset %}
    {% set label %}
      {{ include('splash:form-label', {
        title,
        required: input_attributes.required,
        for: input_attributes.id
      }) }}
    {% endset %}
    {{ include('splash:form-element', {
      label,
      children,
      errors,
      label_display: 'before',
      description_display: 'after',
      description
    }) }}

  {% endstory %}
{% endstories %}
