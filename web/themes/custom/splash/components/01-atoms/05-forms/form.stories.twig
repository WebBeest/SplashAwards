{% stories form with {
  title: 'Splash Awards/Atoms/Form'
} %}
  {% story checkbox with {
    name: '1. Checkbox',
    args: {
      id: 'my-checkbox',
      name: 'my-checkbox-field',
      label: 'I accept the terms and conditions'|t,
      description: 'By accepting the terms and conditions all your base are belong to us'|t,
      value: 'yes',
      required: true
    }
  } %}
    {{ include('splash:checkbox', {id,name,label,value,required}) }}
  {% endstory %}

  {% story checkboxes with {
    name: '2. Fieldset with multiple checkboxes',
    args: {
      legend: 'Sign up for our newsletter'|t,
      items: {
        1: {
          label_attributes: {
            required: false,
          },
          id: 'field-newsletter-one',
          name: 'newsletter[one]',
          label: 'Newsletter one',
          value: 'one',
          required: false,
        },
        2: {
          label_attributes: {
            required: false,
          },
          id: 'field-newsletter-two',
          name: 'newsletter[two]',
          label: 'Newsletter two',
          value: 'two',
          required: false,
        }
      }
    }
  } %}
    {{ include('splash:checkboxes', {legend,items}) }}
  {% endstory %}

  {% story text with {
    name: '3. Input type text',
    args: {
      input_attributes: {
        placeholder: 'What is your name?',
        maxlength: 255,
        size: 60,
      },
      label: 'Name',
      id: 'field-name',
      name: 'name',
      value: '',
      required: true,
      description: 'Please enter your first and last name',
      error: 'Name is a required field'
    }
  } %}
    {% include '@atoms/05-forms/text/text.twig' %}
  {% endstory %}
{% endstories %}
